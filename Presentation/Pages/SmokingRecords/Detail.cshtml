@page "{id:int}"
@model Presentation.Pages.SmokingRecords.DetailModel
@{
    ViewData["Title"] = "Health Record Details";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-eye me-2"></i>
                        Health Record Details
                    </h2>
                    <p class="text-muted mb-0">View smoking cessation record and health progress</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-page="./Edit" asp-route-id="@Model.Item.RecordId" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>
                        Edit Record
                    </a>
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Back to Records
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Health Status Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-@Model.GetHealthStatusColor() text-white">
                    <h5 class="mb-0">
                        <i class="@Model.GetHealthStatusIcon() me-2"></i>
                        Health Status: @Model.GetHealthStatus()
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Health Preview -->
                        <div class="col-md-4 text-center mb-4">
                            <div class="card border-@Model.GetHealthStatusColor() bg-light" style="min-height: 200px;">
                                <div class="card-body d-flex align-items-center justify-content-center">
                                    <div class="text-center">
                                        <i class="@Model.GetHealthStatusIcon() fa-4x text-@Model.GetHealthStatusColor() mb-3 health-icon"></i>
                                        <div class="fw-bold text-@Model.GetHealthStatusColor() h5">@Model.GetHealthStatus()</div>
                                        <div class="text-muted">@Model.Item.RecordDate.ToString("MMM dd, yyyy")</div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Status Badge -->
                            <div class="mt-3">
                                @if (Model.Item.Disabled == true)
                                {
                                    <span class="badge bg-danger-subtle text-danger fs-6 px-3 py-2">
                                        <i class="fas fa-times me-1"></i>Disabled Record
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success-subtle text-success fs-6 px-3 py-2">
                                        <i class="fas fa-check me-1"></i>Active Record
                                    </span>
                                }
                            </div>
                        </div>

                        <!-- Record Details -->
                        <div class="col-md-8">
                            <!-- Record Date -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-primary">
                                    <i class="fas fa-calendar me-1"></i>
                                    Record Date
                                </label>
                                <div class="p-3 bg-light rounded border">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-calendar-day me-2 text-primary fa-lg"></i>
                                        <div>
                                            <h6 class="mb-0">@Model.Item.RecordDate.ToString("dddd, MMMM dd, yyyy")</h6>
                                            <small class="text-muted">Day @Model.Item.RecordDate.DayOfYear of the year</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Cigarettes Count -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-primary">
                                    <i class="fas fa-smoking me-1"></i>
                                    Cigarettes Consumed
                                </label>
                                <div class="p-3 bg-light rounded border">
                                    @if (Model.Item.CigarettesCount == 0)
                                    {
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-heart me-2 text-success fa-lg"></i>
                                            <div>
                                                <h6 class="mb-0 text-success">Smoke-Free Day! 🎉</h6>
                                                <small class="text-muted">0 cigarettes consumed</small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-smoking me-2 text-warning fa-lg"></i>
                                            <div>
                                                <h6 class="mb-0">@Model.Item.CigarettesCount cigarettes</h6>
                                                <small class="text-muted">Consumed on this day</small>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Frequency -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-primary">
                                    <i class="fas fa-clock me-1"></i>
                                    Smoking Frequency
                                </label>
                                <div class="p-3 bg-info-subtle rounded border border-info">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-clock me-2 text-info fa-lg"></i>
                                        <div>
                                            <h6 class="mb-0 text-info">@Model.GetFrequencyDisplayText()</h6>
                                            <small class="text-muted">Smoking pattern for this day</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Financial & Notes Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Financial Impact & Health Notes
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <!-- Cost Information -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-danger">
                                    <i class="fas fa-dollar-sign me-1"></i>
                                    Cost per Pack
                                </label>
                                <div class="p-3 bg-light rounded border">
                                    @if (Model.Item.CostPerPack.HasValue)
                                    {
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-dollar-sign me-2 text-danger fa-lg"></i>
                                            <div>
                                                <h6 class="mb-0 text-danger">$@Model.Item.CostPerPack.Value.ToString("F2")</h6>
                                                <small class="text-muted">Cost per pack</small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No cost information recorded</span>
                                    }
                                </div>
                            </div>

                            <!-- Estimated Daily Cost -->
                            @if (Model.Item.CostPerPack.HasValue && Model.Item.CigarettesCount > 0)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-warning">
                                        <i class="fas fa-calculator me-1"></i>
                                        Estimated Daily Cost
                                    </label>
                                    <div class="p-3 bg-warning-subtle rounded border border-warning">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-coins me-2 text-warning fa-lg"></i>
                                            <div>
                                                <h6 class="mb-0 text-warning">$@Model.GetEstimatedDailyCost().ToString("F2")</h6>
                                                <small class="text-muted">Based on cigarettes consumed</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="col-md-6">
                            <!-- User Information -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-primary">
                                    <i class="fas fa-user me-1"></i>
                                    User Information
                                </label>
                                <div class="p-3 bg-light rounded border">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-circle me-2 text-primary fa-lg"></i>
                                        <div>
                                            <h6 class="mb-0">@(Model.Item.User?.Email ?? "User information not loaded")</h6>
                                            <small class="text-muted">User ID: @Model.Item.UserId</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Health Notes -->
                    <div class="mt-3">
                        <label class="form-label fw-semibold text-primary">
                            <i class="fas fa-sticky-note me-1"></i>
                            Health Notes & Observations
                        </label>
                        <div class="p-3 bg-primary-subtle rounded border border-primary">
                            @if (!string.IsNullOrEmpty(Model.Item.Notes))
                            {
                                <div class="d-flex">
                                    <i class="fas fa-quote-left me-2 text-primary mt-1"></i>
                                    <div>
                                        <p class="mb-0 text-primary">@Model.Item.Notes</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted">
                                    <i class="fas fa-file-alt fa-2x mb-2"></i>
                                    <p class="mb-0">No health notes recorded for this day</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Information Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        System Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">
                                    <i class="fas fa-calendar-plus me-1"></i>
                                    Created Date
                                </label>
                                <div class="text-dark">
                                    @Model.Item.CreatedAt?.ToString("dddd, MMMM dd, yyyy 'at' hh:mm tt")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">
                                    <i class="fas fa-calendar-edit me-1"></i>
                                    Last Updated
                                </label>
                                <div class="text-dark">
                                    @if (Model.Item.UpdatedAt.HasValue && Model.Item.UpdatedAt != Model.Item.CreatedAt)
                                    {
                                        @Model.Item.UpdatedAt?.ToString("dddd, MMMM dd, yyyy 'at' hh:mm tt")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never updated</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">
                                    <i class="fas fa-hashtag me-1"></i>
                                    Record ID
                                </label>
                                <div class="text-dark">
                                    <code>#@Model.Item.RecordId</code>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">
                                    <i class="fas fa-toggle-on me-1"></i>
                                    Current Status
                                </label>
                                <div class="text-dark">
                                    @if (Model.Item.IsDeleted == true)
                                    {
                                        <span class="text-danger">
                                            <i class="fas fa-trash me-1"></i>Deleted
                                        </span>
                                    }
                                    else if (Model.Item.Disabled == true)
                                    {
                                        <span class="text-warning">
                                            <i class="fas fa-pause me-1"></i>Disabled
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-success">
                                            <i class="fas fa-check me-1"></i>Active
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Sidebar -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-cog me-2"></i>
                        Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-page="./Edit" asp-route-id="@Model.Item.RecordId" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>
                            Edit Record
                        </a>
                        
                      
                        
                        <a asp-page="./Create" class="btn btn-outline-success">
                            <i class="fas fa-plus me-2"></i>
                            Add New Record
                        </a>
                        
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>
                            View All Records
                        </a>
                    </div>
                </div>
            </div>

            <!-- Health Motivation -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-@Model.GetHealthStatusColor() text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-heart me-2"></i>
                        Health Motivation
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <i class="@Model.GetHealthStatusIcon() fa-3x text-@Model.GetHealthStatusColor() mb-3"></i>
                        <p class="text-@Model.GetHealthStatusColor() fw-semibold">@Model.GetMotivationalMessage()</p>
                    </div>
                </div>
            </div>

            <!-- Health Statistics -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0 text-dark">
                        <i class="fas fa-chart-bar me-2"></i>
                        Record Summary
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-12 mb-3">
                            <div class="border-bottom pb-3">
                                <i class="fas fa-smoking fa-2x text-warning mb-2"></i>
                                <h5 class="mb-1 text-warning">@Model.Item.CigarettesCount</h5>
                                <small class="text-muted">Cigarettes</small>
                            </div>
                        </div>
                        
                        @if (Model.Item.CostPerPack.HasValue)
                        {
                            <div class="col-6">
                                <i class="fas fa-dollar-sign fa-2x text-danger mb-2"></i>
                                <h6 class="mb-1">$@Model.Item.CostPerPack.Value.ToString("F2")</h6>
                                <small class="text-muted">Pack Cost</small>
                            </div>
                            <div class="col-6">
                                <i class="fas fa-calculator fa-2x text-info mb-2"></i>
                                <h6 class="mb-1">$@Model.GetEstimatedDailyCost().ToString("F2")</h6>
                                <small class="text-muted">Daily Cost</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(recordId, recordDate) {
            const confirmation = confirm(`Are you sure you want to delete the smoking record for "${recordDate}"?\n\nThis action cannot be undone.`);
            
            if (confirmation) {
                // Redirect to delete or trigger delete action
                // You can implement this based on your delete mechanism
                window.location.href = `/SmokingRecords/Index?handler=Delete&id=${recordId}`;
            }
        }

        // Add animation to health icon
        document.addEventListener('DOMContentLoaded', function() {
            const healthIcon = document.querySelector('.health-icon');
            if (healthIcon) {
                healthIcon.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.1) rotate(10deg)';
                });
                healthIcon.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1) rotate(0deg)';
                });
            }
        });
    </script>
}

<style>
    .card {
        border-radius: 15px;
        transition: all 0.3s ease;
    }
    
    .health-icon {
        transition: all 0.3s ease;
        animation: pulse 3s infinite;
    }
    
 
    
    .bg-success-subtle {
        background-color: #d1e7dd !important;
    }
    
    .bg-danger-subtle {
        background-color: #f8d7da !important;
    }
    
    .bg-warning-subtle {
        background-color: #fff3cd !important;
    }
    
    .bg-info-subtle {
        background-color: #cff4fc !important;
    }
    
    .bg-primary-subtle {
        background-color: #cfe2ff !important;
    }
    
    .alert {
        border-radius: 10px;
        border: none;
    }
    
    code {
        font-size: 0.9em;
        padding: 0.2em 0.4em;
        background-color: #f8f9fa;
        border-radius: 4px;
    }
    
    .btn {
        border-radius: 8px;
        transition: all 0.2s ease;
    }
    
    .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .border-bottom {
        border-bottom: 1px solid #dee2e6 !important;
    }
</style>