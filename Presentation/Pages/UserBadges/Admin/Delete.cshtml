@page
@model Presentation.Pages.UserBadges.Admin.DeleteModel

@{
    ViewData["Title"] = "Xóa Huy Hiệu";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="text-danger mb-3">🗑️ Bạn có chắc chắn muốn xóa mục này không?</h2>
            <h5 class="text-secondary mb-4">Thông tin Huy hiệu người dùng:</h5>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Người dùng:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserBadge.User.Email)</dd>
                <dt class="col-sm-3 fw-bold">Ngày nhận huy hiệu:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserBadge.AwardedAt)</dd>

                <dt class="col-sm-3 fw-bold">Mã huy hiệu:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserBadge.Badge.Code)</dd>

            </dl>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="UserBadge.UserBadgeId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash-fill"></i> Xóa
                </button>
                <a asp-page="./Index" class="btn btn-outline-secondary">Quay lại danh sách</a>
            </form>
        </div>
    </div>
</div>
