@page
@model Presentation.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Danh sách người dùng</h2>
        @* <a class="btn btn-success" asp-page="Create"> *@
        @*     <i class="bi bi-plus-circle"></i> Thêm người dùng *@
        @* </a> *@
    </div>

    <table class="table table-bordered table-hover table-striped align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>Vai trò</th>
                <th>Tên đăng nhập</th>
                <th>Email</th>
                <th>Họ</th>
                <th>Tên</th>
                <th>Ngày tạo</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td class="text-center">@item.Role</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td class="text-center">@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        @* <a class="btn btn-sm btn-primary me-1" asp-page="./Edit" asp-route-id="@item.UserId"> *@
                        @*     <i class="bi bi-pencil-square"></i> Sửa *@
                        @* </a> *@
                        <a class="btn btn-sm btn-info me-1 text-white" asp-page="./Details" asp-route-id="@item.UserId">
                            <i class="bi bi-eye"></i> Xem
                        </a>
                        @* <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.UserId"> *@
                        @*     <i class="bi bi-trash"></i> Xóa *@
                        @* </a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            @* Nút "Trang trước" *@
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-page="./Index" asp-route-page="@(Model.CurrentPage - 1)" tabindex="-1">
                    &laquo; Trang trước
                </a>
            </li>

            @* Danh sách các trang *@
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-page="@i">@i</a>
                </li>
            }

            @* Nút "Trang sau" *@
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="./Index" asp-route-page="@(Model.CurrentPage + 1)">
                    Trang sau &raquo;
                </a>
            </li>
        </ul>
    </nav>


</div>
