@page "{id:int}"
@model Presentation.Pages.Badges.DetailModel
@{
    ViewData["Title"] = "Badge Details";
    Layout = "_Layout";
}

<main role="main" class="pb-3">
    <div class="container-fluid py-4">
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="text-primary mb-1">
                            <i class="fas fa-eye me-2"></i>
                            Badge Details
                        </h2>
                        <p class="text-muted mb-0">View health achievement badge information</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-page="./Edit" asp-route-id="@Model.Item.BadgeId" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>
                            Edit Badge
                        </a>
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to Badges
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Badge Information Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-award me-2"></i>
                            Badge Information
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row">
                            <!-- Badge Preview -->
                            <div class="col-md-4 text-center mb-4">
                                <div class="card border-primary bg-gradient-light" style="min-height: 200px;">
                                    <div class="card-body d-flex align-items-center justify-content-center">
                                        <div class="text-center">
                                            <i class="fas fa-award fa-4x text-warning mb-3 preview-icon"></i>
                                            <div class="fw-bold text-dark h5">@Model.Item.Name</div>
                                            <div class="text-muted">@Model.Item.Code</div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Status Badge -->
                                <div class="mt-3">
                                    @if (Model.Item.Disabled == true)
                                    {
                                        <span class="badge bg-danger-subtle text-danger fs-6 px-3 py-2">
                                            <i class="fas fa-times me-1"></i>Disabled
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success-subtle text-success fs-6 px-3 py-2">
                                            <i class="fas fa-check me-1"></i>Active
                                        </span>
                                    }
                                </div>
                            </div>

                            <!-- Badge Details -->
                            <div class="col-md-8">
                                <!-- Badge Code -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold text-primary">
                                        <i class="fas fa-code me-1"></i>
                                        Badge Code
                                    </label>
                                    <div class="p-3 bg-light rounded border">
                                        <span class="badge bg-dark fs-6">@Model.Item.Code</span>
                                    </div>
                                </div>

                                <!-- Badge Name -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold text-primary">
                                        <i class="fas fa-tag me-1"></i>
                                        Badge Name
                                    </label>
                                    <div class="p-3 bg-light rounded border">
                                        <h6 class="mb-0">@Model.Item.Name</h6>
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold text-primary">
                                        <i class="fas fa-align-left me-1"></i>
                                        Description
                                    </label>
                                    <div class="p-3 bg-light rounded border">
                                        <p class="mb-0">@Model.Item.Description</p>
                                    </div>
                                </div>

                                <!-- Achievement Criteria -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold text-primary">
                                        <i class="fas fa-trophy me-1"></i>
                                        Achievement Criteria
                                    </label>
                                    <div class="p-3 bg-success-subtle rounded border border-success">
                                        <p class="mb-0 text-success fw-semibold">
                                            <i class="fas fa-bullseye me-2"></i>@Model.Item.Criteria
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- System Information Card -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            System Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-muted small">
                                        <i class="fas fa-calendar-plus me-1"></i>
                                        Created Date
                                    </label>
                                    <div class="text-dark">
                                        @Model.Item.CreatedAt?.ToString("dddd, MMMM dd, yyyy 'at' hh:mm tt")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-muted small">
                                        <i class="fas fa-calendar-edit me-1"></i>
                                        Last Updated
                                    </label>
                                    <div class="text-dark">
                                        @if (Model.Item.UpdatedAt.HasValue && Model.Item.UpdatedAt != Model.Item.CreatedAt)
                                        {
                                            @Model.Item.UpdatedAt?.ToString("dddd, MMMM dd, yyyy 'at' hh:mm tt")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never updated</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-muted small">
                                        <i class="fas fa-hashtag me-1"></i>
                                        Badge ID
                                    </label>
                                    <div class="text-dark">
                                        <code>#@Model.Item.BadgeId</code>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-muted small">
                                        <i class="fas fa-toggle-on me-1"></i>
                                        Current Status
                                    </label>
                                    <div class="text-dark">
                                        @if (Model.Item.IsDeleted == true)
                                        {
                                            <span class="text-danger">
                                                <i class="fas fa-trash me-1"></i>Deleted
                                            </span>
                                        }
                                        else if (Model.Item.Disabled == true)
                                        {
                                            <span class="text-warning">
                                                <i class="fas fa-pause me-1"></i>Disabled
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-success">
                                                <i class="fas fa-check me-1"></i>Active
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Sidebar -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0">
                            <i class="fas fa-cog me-2"></i>
                            Quick Actions
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-page="./Edit" asp-route-id="@Model.Item.BadgeId" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>
                                Edit Badge
                            </a>

                            @if (Model.Item.Disabled == true)
                            {
                                <button type="button" class="btn btn-success" onclick="toggleBadgeStatus(@Model.Item.BadgeId, false)">
                                    <i class="fas fa-play me-2"></i>
                                    Enable Badge
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-outline-warning" onclick="toggleBadgeStatus(@Model.Item.BadgeId, true)">
                                    <i class="fas fa-pause me-2"></i>
                                    Disable Badge
                                </button>
                            }

                            <button type="button" class="btn btn-outline-danger" onclick="confirmDelete(@Model.Item.BadgeId, '@Model.Item.Name')">
                                <i class="fas fa-trash me-2"></i>
                                Delete Badge
                            </button>

                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="fas fa-list me-2"></i>
                                View All Badges
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Badge Guidelines -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0 text-dark">
                            <i class="fas fa-lightbulb me-2"></i>
                            Badge Guidelines
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Active badges</strong> can be earned by users completing the specified criteria.
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Disabled badges</strong> cannot be earned by new users, but existing achievements remain.
                        </div>

                        <div class="alert alert-danger">
                            <i class="fas fa-trash me-2"></i>
                            <strong>Deleted badges</strong> are permanently removed from the system.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        function toggleBadgeStatus(badgeId, disable) {
            const action = disable ? 'disable' : 'enable';
            const confirmation = confirm(`Are you sure you want to ${action} this badge?`);

            if (confirmation) {
                // Implementation for toggle status
                // You can add AJAX call here or redirect to a handler
                console.log(`Toggle badge ${badgeId} to ${disable ? 'disabled' : 'enabled'}`);
            }
        }

        function confirmDelete(badgeId, badgeName) {
            const confirmation = confirm(`Are you sure you want to delete the badge "${badgeName}"?\n\nThis action cannot be undone.`);

            if (confirmation) {
                // Redirect to delete page or trigger delete action
                window.location.href = `/Badges/Delete/${badgeId}`;
            }
        }

        // Add animation to preview icon
        document.addEventListener('DOMContentLoaded', function() {
            const previewIcon = document.querySelector('.preview-icon');
            if (previewIcon) {
                previewIcon.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.1) rotate(10deg)';
                });
                previewIcon.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1) rotate(0deg)';
                });
            }
        });
    </script>
}

<style>
    .card {
        border-radius: 15px;
        transition: all 0.3s ease;
    }

    .bg-gradient-light {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .preview-icon {
        transition: all 0.3s ease;
        animation: pulse 3s infinite;
    }



    .bg-success-subtle {
        background-color: #d1e7dd !important;
    }

    .bg-danger-subtle {
        background-color: #f8d7da !important;
    }

    .alert {
        border-radius: 10px;
        border: none;
    }

    code {
        font-size: 0.9em;
        padding: 0.2em 0.4em;
        background-color: #f8f9fa;
        border-radius: 4px;
    }

    .btn {
        border-radius: 8px;
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>